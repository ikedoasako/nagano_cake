<div class="container mt-5">
<h3>会員情報編集</h3><br />
  <div class="row">
  <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
    <table class= "table">
      <tbody>
        <tr></tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email %></td>
        </tr>
        <tr></tr>
        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
          <td><%= f.submit "退会する", class: "btn btn-danger" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
  </div>
</div>
