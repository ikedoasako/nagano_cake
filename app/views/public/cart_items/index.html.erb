<div class="container mt-5">
  <div class="row">
    <div class="col-2 offset-10">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.get_image(150,150) %>
              <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.item.with_tax_price * cart_item.amount %></td>
          <td><%= link_to cart_item_path(cart_item), method: :delete do %>
          <button class= "btn btn-danger">削除する</button>
              <% end %>
        </tr>
        <tr>
          <td><% @sum += cart_item.item.with_tax_price * cart_item.amount %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>