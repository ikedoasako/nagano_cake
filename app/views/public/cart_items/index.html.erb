<div class="container mt-5">
  <div class="row">
    <div class="col-2 offset-10">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, class: "btn btn-danger" %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= link_to item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.subtotal %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td><% @合計金額 += cart_item.subtotal %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>