<div class="container mt-5">
  <%= form_with(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <h4>新規会員登録</h4><br />
    
    <div class="row">
      <div class="col-3">
        <%= f.label "氏名" %>
      </div>
      <div class="col-auto">
        <%= f.label "(姓)" %>
        <%= f.text_field :last_name %>
      </div>
      <div class="col-auto">
        <%= f.label "(名)" %>
        <%= f.text_field :first_name %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <%= f.label "フリガナ" %>
      </div>
      <div class="col-auto">
        <%= f.label "(セイ)" %>
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="col-auto">
        <%= f.label "(メイ)" %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label "メースアドレス" %>
      </div>
      <div class="col-auto">
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label "郵便番号（ハイフンなし）" %>
      </div>
      <div class="col-auto">
        <%= f.text_field :postal_code %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label "住所" %>
      </div>
      <div class="col-auto">
        <%= f.text_field :address %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label "電話番号（ハイフンなし）" %>
      </div>
      <div class="col-3">
        <%= f.text_field :telephone_number %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-auto">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <%= f.label "パスワード(確認用)" %>
      </div>
      <div class="col-auto">
        <%= f.password_field :password %>
      </div>
    </div><br />
    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
  <p></p>
  <p>すでに登録済みの方<br />
    <%= link_to "こちら", new_customer_session_path %>
    からログインしてください。</p>
</div>
