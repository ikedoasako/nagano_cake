<div class="container mt-5">
  <h4>商品一覧</h4>
  <div class="row">
  <% @items.each do |item| %>
    <div class= "col-md-10">
      <p><%= link_to item_path(item.id) do %>
         <%= image_tag item.get_image(150,150) %>
         <% end %>
      </p><br>
      <p><%= item.name %></p><br>
      <p><%= item.price %></p>
    </div>
  <% end %>
  </div>
  <div class="row">
    <div class= "col-md-10">
    <%= paginate @items %>
    </div>
  </div>
</div>

