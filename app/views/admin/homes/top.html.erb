<div class= "container mt-5 px-sm-0">
  <div class= "row">
    <div class="col-md-10">
    <h4>商品一覧</h4>
    <table class= "table">
      <thead>
        <tr>
          <th class="col-4">購入日時</th>
          <th class="col-3">購入者</th>
          <th class="col-3">注文個数</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to admin_orders_path(order.id) do %>
              <%= order.created_at %>
              <% end %>
          </td>
          <td><%= order.customer.last_name + order.customer.first_name %></td>
          <td><%#= order.amount %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @orders %>
  </div>
</div>