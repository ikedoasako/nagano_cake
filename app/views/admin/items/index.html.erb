<div class="container mt-5">
  <div class="row">
    <div class= "col-md-10 offset-1">
    <h3>商品一覧</h3>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %>
                円
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class= "mx-auto">
  <%= paginate @items %>
  </div>
</div>
