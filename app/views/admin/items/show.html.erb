<div class="container mt-5">
  <div class="row">
    <table class="table">
      <tbody>
        <tr>
          <td rowspan="2"><%= image_tag @item.get_image(150,150) %></td>
          <td>商品名</td>
          <td><%= @item.name %></td>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td></td>
            <td>税込価格<br>（税抜価格）</td>
            <td><%= @item.price%>円</td>
          </tr>
        </tr>
      </tbody>
    </table>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>